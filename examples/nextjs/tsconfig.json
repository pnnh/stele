{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "sourceMap": false,
    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": false,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./node_modules/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "build/types/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "packages"
  ]
}
